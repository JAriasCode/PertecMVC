
@model PertecMVC.Models.Custom.CustomEmployee
@{
    ViewData["Title"] = "Editar empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 d-flex justify-content-between mb-4">
    <!-- Fila -->
    <div class="row col-2">
        <!-- Boton retroceder -->
        <a class="btn btn-dark" href="@Url.Action("Index", "Employee")">
            <i class="fas fa-arrow-left"> Atrás </i>
        </a>
    </div>
</div>

<!-- Formulario de registro -->
<div class="row d-flex justify-content-center">
    <div class="card o-hidden col-10">
        <div class="card-body">
            @using (Html.BeginForm("EditEmployee", "Employee"))
            {
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="name" class="col-form-label">Cédula *</label>
                        @Html.TextBoxFor(m => m.IdNumber, new { placeholder = "Cédula", required = "true", @readonly = "true", @class = "form-control" })
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="name" class="col-form-label">Puesto *</label>
                        @Html.DropDownListFor(m => m.CurrentJob, new SelectList(Model.JobList, "Id", "Description"), "Seleccione un puesto", new { required = "true", @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="name" class="col-form-label">Nombre *</label>
                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Nombre", required = "true", @class = "form-control" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="name" class="col-form-label">Segundo nombre</label>
                        @Html.TextBoxFor(m => m.MiddleName, new { placeholder = "Seg. Nom.", @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="name" class="col-form-label">Apellido(s) *</label>
                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Apellido(s)", required = "true", @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="name" class="col-form-label">Celular</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Celular", @class = "form-control" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="name" class="col-form-label">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="name" class="col-form-label">Direccion</label>
                        @Html.TextBoxFor(m => m.Address, new { placeholder = "Direccion", @class = "form-control" })
                    </div>
                </div>

                 <div class="row">
                     <div class="col-md-3 form-group">
                        <label for="name" class="col-form-label">Estado *</label>
                        @Html.DropDownListFor(m => m.CurrentStatus, new SelectList(Model.StatusList, "Id", "Description"), "Seleccione un estado", new { required = "true", @class = "form-control" })
                    </div>

                    <div class="form-group col-md-9">
                        <label for="name" class="col-form-label">Motivo</label>
                        @Html.TextBoxFor(m => m.OutReason, new { placeholder = "Motivo de salida", @class = "form-control" })
                    </div>
                    
                </div>

                <br>

                <div class="form-row d-flex justify-content-center">
                    <button type="submit" class="btn btn-secondary">
                        <i class="far fa-save"> Guardar</i>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<!-- Fin Formulario de registro -->


